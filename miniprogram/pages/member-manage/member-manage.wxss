/* pages/member-manage/member-manage.wxss */

.container {
  padding: 20rpx;
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  position: relative;
}

.back-button {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #333;
}

.back-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}

.page-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 36rpx;
  font-weight: bold;
}

.form-section {
  margin-top: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.form-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
  text-align: center;
}

.form-group {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.input, .picker-view {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  background-color: #f9f9f9;
  display: flex;
  align-items: center;
}

.textarea {
  width: 100%;
  height: 180rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  background-color: #f9f9f9;
}

.form-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 30rpx;
}

.btn.cancel {
  background-color: #f2f2f2;
  color: #666;
  margin-right: 20rpx;
}

.btn.submit {
  background-color: #07c160;
  color: #fff;
}

.members-list {
  margin-top: 40rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.list-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.member-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.member-item:last-child {
  border-bottom: none;
}

.member-info {
  flex: 1;
}

.member-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.member-date {
  font-size: 26rpx;
  color: #999;
}

.member-actions {
  display: flex;
  align-items: center;
}

.action-btn {
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
  font-size: 26rpx;
  margin-left: 20rpx;
}

.action-btn.edit {
  background-color: #f2f2f2;
  color: #333;
}

.action-btn.delete {
  background-color: #ff4d4f;
  color: #fff;
}

.empty-list {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
  font-size: 28rpx;
}
