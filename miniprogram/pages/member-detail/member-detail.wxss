.container {
  background-color: #f4f4f4;
  padding: 20px;
}

.member-detail {
  background-color: white;
  border-radius: 10px;
  padding: 20px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.avatar-container {
  display: flex;
  justify-content: center;
  margin-bottom: 20px;
  position: relative;
}

.avatar {
  width: 150px;
  height: 150px;
  border-radius: 50%;
  border: 3px solid #e0e0e0;
}

.info-section {
  margin-bottom: 20px;
}

.info-row {
  display: flex;
  margin-bottom: 10px;
  padding-bottom: 10px;
  border-bottom: 1px solid #f0f0f0;
}

.edit-mode .info-row {
  margin-bottom: 15px;
}

.label {
  flex: 1;
  font-weight: bold;
  color: #666;
}

.value {
  flex: 2;
  color: #333;
}

.description-section {
  background-color: #f9f9f9;
  padding: 15px;
  border-radius: 5px;
}

.description-section .label {
  display: block;
  margin-bottom: 10px;
  font-weight: bold;
  color: #666;
}

.description {
  color: #333;
  line-height: 1.6;
}

.description-textarea {
  width: 100%;
  min-height: 120px;
  padding: 10px;
  box-sizing: border-box;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 14px;
  line-height: 1.5;
  margin-top: 8px;
}

.edit-button-container {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.edit-button {
  background-color: #4CAF50;
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}

.description-input {
  border: 1rpx solid #ddd;
  padding: 10rpx;
  margin-top: 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.edit-actions {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.save-button {
  background-color: #4CAF50;
  color: white;
}

.cancel-button {
  background-color: #f44336;
  color: white;
}

.avatar-edit {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  color: white;
  padding: 8px;
  text-align: center;
  font-size: 12px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.edit-icon {
  font-size: 20px;
  margin-bottom: 4px;
}

.edit-text {
  font-size: 12px;
}

.input-field {
  flex: 1;
  padding: 8px;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 14px;
  margin-left: 10px;
}

.picker-field {
  flex: 1;
  padding: 8px;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 14px;
  margin-left: 10px;
  color: #333;
  background: #fff;
}