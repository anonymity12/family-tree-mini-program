.container {
  background-color: #f4f4f4;
  padding: 20px;
}

.member-detail {
  background-color: white;
  border-radius: 10px;
  padding: 20px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.avatar-container {
  display: flex;
  justify-content: center;
  margin-bottom: 20px;
}

.avatar {
  width: 150px;
  height: 150px;
  border-radius: 50%;
  border: 3px solid #e0e0e0;
}

.info-section {
  margin-bottom: 20px;
}

.info-row {
  display: flex;
  margin-bottom: 10px;
  padding-bottom: 10px;
  border-bottom: 1px solid #f0f0f0;
}

.label {
  flex: 1;
  font-weight: bold;
  color: #666;
}

.value {
  flex: 2;
  color: #333;
}

.description-section {
  background-color: #f9f9f9;
  padding: 15px;
  border-radius: 5px;
}

.description-section .label {
  display: block;
  margin-bottom: 10px;
  font-weight: bold;
  color: #666;
}

.description {
  color: #333;
  line-height: 1.6;
}
