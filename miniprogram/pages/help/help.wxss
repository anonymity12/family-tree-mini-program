.help-container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.section {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  border-bottom: 2rpx solid #eee;
  padding-bottom: 12rpx;
}

.content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.feature {
  margin: 8rpx 0;
}

.contact {
  margin-top: 12rpx;
  color: #007AFF;
}
